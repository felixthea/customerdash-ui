{
	"manifest_version": 2,

	"name": "Stripe CS",
	"description": "Simple Stripe customer service",
	"version": "0.1",

	"permissions": [
		"http://localhost:3000/*"
	],

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["https://mail.google.com/*"],
			"css": ["content.css"],
			"js": ["jquery.min.js", "content.js"]
		}
	]
}