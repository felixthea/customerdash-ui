{
	"manifest_version": 2,

	"name": "Customer Dash",
	"description": "See your customer's order history when they send you a customer support email right in your Gmail account.",
	"version": "0.1",

	"permissions": [
		"http://localhost:3000/*"
	],

	"background": {
    "scripts": ["jquery.min.js", "background.js"]
  },

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"web_accessible_resources": ["ajax-loader.gif"],

	"content_scripts": [
		{
			"matches": ["https://mail.google.com/*"],
			"css": ["content.css"],
			"js": ["jquery.min.js", "content.js"]
		}
	]
}